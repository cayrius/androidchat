<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:padding="5px">

	<ImageView android:id="@+id/default_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        
	<TextView android:id="@+id/server_title" 
		android:textSize="14sp" 
		android:textStyle="bold"
		android:textColor="#ffe0d090"
        android:paddingLeft="4dip"
        android:paddingRight="5dip"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/default_icon"
        android:singleLine="true" />
        
    <TextView android:id="@+id/server_address" 
		android:textSize="14sp" 
		android:textColor="#ffe0d090"
		android:textStyle="italic"
        android:paddingLeft="4dip"
        android:paddingRight="5dip"
        android:layout_below="@id/server_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true" />
        
</RelativeLayout>