<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="3dip"
                android:orientation="vertical"
        >
        <ImageButton android:id="@+id/ircback"
            android:layout_width="16dip" android:layout_height="16dip"
			android:text="B"            
            
            
            >
            </ImageButton>

    <Button android:id="@+id/ircchannel"
            android:layout_width="16dip" android:layout_height="16dip"
            android:text="C"
            android:layout_alignLeft="@+id/ircback"
            android:layout_below="@+id/ircback"
            
            >
    </Button>
    <Button android:id="@+id/ircsend"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text=">"
            android:layout_toRight="@+id/ircback"
            
            >
    </Button>

    <EditText android:id="@+id/ircedit"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:layout_toRight="@+id/ircsend"
              android:text="">
        <requestFocus/>

    </EditText>


    <TextView android:id="@+id/ircdisp"
              android:layout_below="@+id/ircedit"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:text="Please connect to the network!"
              android:scrollbars="vertical"
              android:autoLink="web"
              android:gravity="bottom"
            />

</RelativeLayout>
